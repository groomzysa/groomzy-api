{
  "name": "groomzy-api",
  "version": "1.0.0",
  "description": "The Groomzy API",
  "main": "index.ts",
  "repository": "git@github.com:Groomzy-Softwares/groomzy-api.git",
  "author": "Sifiso <myezasifiso11@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "npx ts-node -r tsconfig-paths/register src/index.ts",
    "dev": "nodemon -e ts,graphql -x ts-node -r tsconfig-paths/register src/index.ts",
    "pm2:start:prod": "pm2 start src/index.ts --name prod-groomzy-api --node-args='-r tsconfig-paths/register'",
    "pm2:restart:prod": "pm2 restart prod-groomzy-api --node-args='-r tsconfig-paths/register'",
    "pm2:start:dev": "pm2 start src/index.ts --name dev-groomzy-api --node-args='-r tsconfig-paths/register'",
    "pm2:restart:dev": "pm2 restart dev-groomzy-api --node-args='-r tsconfig-paths/register'",
    "prisma:init": "npx prisma init",
    "prisma:generate": "npx prisma generate",
    "prisma:format": "npx prisma format",
    "prisma:migrate:init": "npx prisma migrate dev --name init",
    "prisma:migrate:update": "prisma migrate dev --name modified",
    "prisma:migrate:deploy": "npx prisma migrate deploy"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.6.1",
    "@prisma/client": "^4.13.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash": "^4.14.194",
    "@types/nodemailer": "^6.4.7",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "express-handlebars": "^7.0.7",
    "graphql": "^16.6.0",
    "graphql-tools": "^8.3.20",
    "graphql-yoga": "^3.9.1",
    "isemail": "^3.2.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "nodemailer": "^6.9.1",
    "nodemailer-express-handlebars": "^6.1.0"
  },
  "devDependencies": {
    "@types/node": "^18.16.0",
    "@types/nodemailer-express-handlebars": "^4.0.2",
    "nodemon": "^2.0.22",
    "prisma": "^4.13.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  }
}
